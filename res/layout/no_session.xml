<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1"/>

    <TextView android:id="@+id/no_sessions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:text="@string/no_sessions"/>

    <Button
        android:id="@+id/create_session_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_session"
        android:layout_marginTop="10dip"
        android:layout_gravity="center"
        android:onClick="on_createSession_clicked" />

    <View android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1"/>
</LinearLayout>